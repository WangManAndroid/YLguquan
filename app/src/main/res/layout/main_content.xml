<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#87e1e1e1"
            />
        <com.yinglan.alphatabs.AlphaTabsIndicator
            android:id="@+id/tabpage_act_tpi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            >
            <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                app:tabIconNormal="@mipmap/ic_launcher"
                app:tabIconSelected="@mipmap/ic_launcher"
                app:tabText="首页"
                app:tabTextSize="13sp"
                app:textColorNormal="@color/white"
                app:textColorSelected="@color/white"
                />
            <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                app:tabIconNormal="@mipmap/ic_launcher"
                app:tabIconSelected="@mipmap/ic_launcher"
                app:tabText="分类"
                app:tabTextSize="13sp"
                app:textColorNormal="@color/white"
                app:textColorSelected="@color/white"
                />
            <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                app:tabIconNormal="@mipmap/ic_launcher"
                app:tabIconSelected="@mipmap/ic_launcher"
                app:tabText="资讯"
                app:tabTextSize="13sp"
                app:textColorNormal="@color/white"
                app:textColorSelected="@color/white"
                />
            <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                app:tabIconNormal="@mipmap/ic_launcher"
                app:tabIconSelected="@mipmap/ic_launcher"
                app:tabText="购物车"
                app:tabTextSize="13sp"
                app:textColorNormal="@color/white"
                app:textColorSelected="@color/white"
                />
            <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                app:tabIconNormal="@mipmap/ic_launcher"
                app:tabIconSelected="@mipmap/ic_launcher"
                app:tabText="我的"
                app:tabTextSize="13sp"
                app:textColorNormal="@color/white"
                app:textColorSelected="@color/white"
                />

        </com.yinglan.alphatabs.AlphaTabsIndicator>
    </LinearLayout>
</LinearLayout>
